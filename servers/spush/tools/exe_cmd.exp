#!/usr/bin/expect
set ip [lindex $argv 0]
set user [lindex $argv 1]
set pass [lindex $argv 2]
set cmd [lindex $argv 3]

if {$argc!=4} {
  send_user "usage:ip user pass cmd\n"
  exit 
}

spawn ssh $user@$ip $cmd 
expect {
  "password:" {
    send "$pass\n";
    exp_continue
  };
  "*yes/no*" {
    send "yes\n"; 
    exp_continue
  }
  eof {
    exit
  }
}

